{% extends 'front/base.html.twig' %}

{% block body %}
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="card-title">Détails de l'Association</h5>
                    <div>
                        <a href="{{ path('app_association_index') }}" class="btn btn-light">Retour à la liste</a>
                        <a href="{{ path('app_association_edit', {'id': association.id}) }}" class="btn btn-light">Modifier</a>
                        {{ include('front/association/_delete_form.html.twig', {'id': association.id}) }}
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <th class="bg-primary text-white">Id</th>
                                <td>{{ association.id }}</td>
                            </tr>
                            <tr>
                                <th class="bg-primary text-white">Nom</th>
                                <td>{{ association.nom }}</td>
                            </tr>
                            <tr>
                                <th class="bg-primary text-white">Adresse</th>
                                <td>{{ association.adresse }}</td>
                            </tr>
                            <tr>
                                <th class="bg-primary text-white">Caisse</th>
                                <td>{{ association.caisse }}</td>
                            </tr>
                            <tr>
                                <th class="bg-primary text-white">Type</th>
                                <td>{{ association.type }}</td>
                            </tr>
                            <tr>
                                <th class="bg-primary text-white">Statut</th>
                                <td>{{ association.statut }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
