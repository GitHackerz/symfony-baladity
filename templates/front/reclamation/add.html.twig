{% extends 'front/base.html.twig' %}

{% block title %}Réclamation
{% endblock %}

{% block body %}
	{% include "front/Header.html.twig" %}

	<div class="container-fluid position-relative p-0">
		<div class="container mt-5">
			<h2 class="mb-4">Ajouter Une Réclamation</h2>
			<div class="card">
				<div class="card-body">
					{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

					{% for field in form %}
						{% set fieldValue = field.vars.value %}
						<div class="mb-3">
							{{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
							

						</div>

					{% endfor %}


					{{ form_end(form) }}
				</div>
			</div>
			<br>
		</div>
	</div>
{% endblock %}
