<form {{ form_enctype(form) }} method="{{ form_method(form) }}" action="{{ form_action(form) }}" class="needs-validation" novalidate>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.field1, 'Label 1') }}
                {{ form_widget(form.field1, {'attr': {'class': 'form-control', 'placeholder': 'Enter value'}}) }}
                <div class="invalid-feedback">{{ form_errors(form.field1)|join(', ') }}</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.field2, 'Label 2') }}
                {{ form_widget(form.field2, {'attr': {'class': 'form-control', 'placeholder': 'Enter value'}}) }}
                <div class="invalid-feedback">{{ form_errors(form.field2)|join(', ') }}</div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
</form>
