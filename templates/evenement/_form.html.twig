{{ form_start(form, {'attr': {'class': 'text-center'}}) }}
    <div class="form-group">
        {{ form_label(form.titre) }}
        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.date) }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control datepicker', 'placeholder': 'Select date'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.lieu) }}
        {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.nomContact) }}
        {{ form_widget(form.nomContact, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.emailContact) }}
        {{ form_widget(form.emailContact, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.statut) }}
        {{ form_widget(form.statut, {'attr': {'class': 'form-check-input'}}) }}
    </div>
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}

<!-- CSS personnalisé pour le sélecteur de date -->
<style>
    .ui-datepicker {
        background-color: #fff;
        border: 1px solid #ced4da;
        border-radius: .25rem;
        padding: .375rem .75rem;
        transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

    .ui-datepicker:focus {
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 .2rem rgba(0,123,255,.25);
    }

    .ui-datepicker::-webkit-input-placeholder {
        color: #6c757d;
        opacity: 1;
    }
</style>

<!-- Script pour activer le sélecteur de date -->
<script>
    $(document).ready(function() {
        $('.datepicker').datepicker({
            dateFormat: 'yy-mm-dd',
            changeMonth: true, // Permet de sélectionner le mois via une liste déroulante
            changeYear: true // Permet de sélectionner l'année via une liste déroulante
        });
    });
</script>
