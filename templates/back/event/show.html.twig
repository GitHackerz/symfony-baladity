{% extends 'back/base.html.twig' %}
{% block body %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card">
                <div class="card-header d-flex flex-row justify-content-between align-items-center">
                    <h5>Liste des evenements</h5>
                    <a href="{{ path('event_back_new') }}" class="btn btn-success ">Create new</a>
                </div>

                <div class="table-responsive text-nowrap">
                    <table class="table table-striped">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ event.id }}</td>
                        </tr>
                        <tr>
                            <th>Titre</th>
                            <td>{{ event.titre }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ event.description }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ event.date }}</td>
                        </tr>
                        <tr>
                            <th>Lieu</th>
                            <td>{{ event.lieu }}</td>
                        </tr>
                        <tr>
                            <th>NomContact</th>
                            <td>{{ event.nomContact }}</td>
                        </tr>
                        <tr>
                            <th>EmailContact</th>
                            <td>{{ event.emailContact }}</td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>{{ event.statut ? 'Yes' : 'No' }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <div class="btn-container">
                        <a href="{{ path('event_back_index') }}" class="btn btn-secondary">Back to list</a>
                        <a href="{{ path('event_back_edit', {'id': event.id}) }}" class="btn btn-warning">Edit</a>
                        {{ include('back/event/_delete_form.html.twig', {'id': event.id}) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}