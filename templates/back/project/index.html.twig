{% extends "back/base.html.twig" %}

{% block stylesheets %}
<style>
    .hoverable-row:hover {
        cursor: pointer;
    }
</style>
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="card">
                <h5 class="card-header">Liste des projets</h5>
                <div class="table-responsive text-nowrap">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Projet</th>
                            <th>Date Debut</th>
                            <th>Date Fin</th>
                            <th>Statut</th>
                            <th>Budget</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                        {% for projet in projets %}
                            <tr data-id="{{ projet.id }}" class="hoverable-row">
                                <td>
                                    <strong>{{ projet.titre }}</strong>
                                </td>
                                <td>{{ projet.dateDebut.format("d M Y") }}</td>
                                <td>{{ projet.dateFin.format("d M Y") }}</td>
                                <td>
                                    <span class="badge {{ (projet.statut | lower) == "planned" ? 'bg-label-danger' : (projet.statut | lower) == "in progress" ? 'bg-label-warning' : "bg-label-primary" }} me-1">{{ projet.statut }}</span>
                                </td>
                                <td>{{ projet.budget|format_currency('TND') }}</td>
                                <td>
                                    <div class="dropdown">
                                        <button
                                                type="button"
                                                class="btn p-0 dropdown-toggle hide-arrow shadow-none"
                                                data-bs-toggle="dropdown"
                                        >
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item text-warning" href="/dashboard/project/edit/{{ projet.id }}"
                                            ><i class="bx bx-edit-alt me-1"></i> Edit</a
                                            >
                                            <a data-project-id="{{ projet.id }}" class="dropdown-item text-danger delete-project" href="javascript:void(0);">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    {% block script %}
        <script>
        $(document).ready(function() {
            $('tr[data-id]').on('click', function() {
                const projectId = $(this).data('id');
                window.location.href = '/dashboard/project/' + projectId;
            });
            $('.dropdown').click(function(event) {
                event.stopPropagation();
            });
            $('.delete-project').click(function(e) {
                e.preventDefault();
                const projectId = $(this).data('project-id');
                const deleteLink = $(this); // Store reference to this

                $.ajax({
                    url: '/dashboard/project/' + projectId,
                    type: 'DELETE',
                    success: function(response) {
                        deleteLink.closest('tr').remove(); // Use stored reference
                    },
                    error: function(xhr, status, error) {
                        console.error(error);
                    }
                });
            });
        });
        </script>
    {% endblock %}
{% endblock %}