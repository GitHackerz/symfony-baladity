{% extends '/back/base.html.twig' %}

{% block title %}Hello citoyen !{% endblock %}
{% block stylesheets %}
<style>
    .table-container {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    overflow-x: auto;
    background: #f4f4f4;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin: 2rem;
    padding: 1rem;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin: 0;
    padding: 0;
}

th {
    background: #007bff;
    color: white;
    padding: 12px 15px;
    text-transform: uppercase;
}

td {
    padding: 12px 15px;
    border-bottom: 1px solid #ddd;
}

tr:nth-child(even) {
    background-color: #f2f2f2;
}

tr:hover {
    background-color: #e9ecef;
    cursor: pointer;
}

td button {
    padding: 8px 15px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
    transition: background 0.3s ease;
}

.show-btn {
    background-color: #28a745;
    color: white;
}

.edit-btn {
    background-color: #ffc107;
    color: black;
}

.delete-btn {
    background-color: #dc3545;
    color: white;
}

.create-new-btn {
    display: block;
    width: max-content;
    padding: 10px 20px;
    margin: 20px 0;
    background-color: #17a2b8;
    color: white;
    border: none;
    border-radius: 5px;
    transition: background 0.3s ease;
    text-decoration: none;
    text-align: center;
}

.create-new-btn:hover,
td button:hover {
    opacity: 0.8;
}

@media (max-width: 768px) {
    th, td {
        display: block;
        width: 100%;
    }

    td {
        text-align: right;
        padding-left: 50%;
        position: relative;
    }

    td::before {
        content: attr(data-label);
        position: absolute;
        left: 0;
        width: 50%;
        padding-left: 15px;
        font-weight: bold;
        text-align: left;
    }

    .create-new-btn, td button {
        width: 100%;
        margin: 10px 0;
    }
}


</style>
{% endblock %}
{% block body %}
    <h1>Citoyen index</h1>

    <input type="text" id="search" placeholder="Rechercher..." class="search-input" data-search-url="{{ path('citoyen_recherche') }}" style="margin-bottom: 20px;">

    <div id="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Cin</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Adresse</th>
                    <th>Date Naissance</th>
                    <th>Genre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Initially, the tbody will be filled by the server-rendered view -->
                {% for citoyen in citoyens %}
                <tr>
                    <td>{{ citoyen.id }}</td>
                    <td>{{ citoyen.cin }}</td>
                    <td>{{ citoyen.nom }}</td>
                    <td>{{ citoyen.prenom }}</td>
                    <td>{{ citoyen.adresse }}</td>
                    <td>{{ citoyen.dateNaissance ? citoyen.dateNaissance|date('Y-m-d') : '' }}</td>
                    <td>{{ citoyen.genre }}</td>
                    <td>
                        <a href="{{ path('app_citoyen_show', {'id': citoyen.id}) }}" class="btn show-btn">show</a>
                        <a href="{{ path('app_citoyen_edit', {'id': citoyen.id}) }}" class="btn edit-btn">edit</a>
                        <!-- Implement delete functionality appropriately -->
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="8">No records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_citoyen_new') }}" class="create-new-btn">Create new</a>

    
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script src="{{ asset('back/js/search.js') }}" defer></script>
{% endblock %}