{% extends 'back/base.html.twig' %}
{% block body %}
    <div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="card">
            <div class="card-header d-flex flex-row justify-content-between align-items-center">
                <h5>Liste des demandes associations</h5>
            </div>

            <div class="table-responsive text-nowrap">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Caisse</th>
                        <th>Type</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for demande_association in demande_associations %}
                        <tr>
                            <td>{{ demande_association.id }}</td>
                            <td>{{ demande_association.nom }}</td>
                            <td>{{ demande_association.adresse }}</td>
                            <td>{{ demande_association.caisse }}</td>
                            <td>{{ demande_association.type }}</td>
                            <td class="d-flex ">
                                <a href="{{ path('demande_association_back_show', {'id': demande_association.id}) }}" style="margin-right: 10px;" class="btn btn-secondary btn-sm">
                                        <span class="bx bx-show" </span>
</a>
<form method="post" action="{{ path('demande_association_back_delete', {'id': demande_association.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande_association.id) }}">
    <button type="submit" class="btn btn-danger btn-sm">
        <span class="bx bx-trash" ></span>
    </button>
</form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}